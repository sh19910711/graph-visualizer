# A sample Gemfile
source "https://rubygems.org"

ruby "2.1.0"

group :production, :development do
  gem "sinatra"
  gem "sinatra-contrib"
  gem "haml"
  gem "sass"
  gem "coffee-script"
  gem "sprockets"
  gem "mongoid"
  gem "bson_ext"
end

group :development do
  gem "rake"
  gem "yard"
  gem "byebug"
  gem "pry"
  gem "juicer"
end

group :test do
  gem "rspec"
  gem "rspec-extra-formatters"
  gem "database_cleaner"
  gem "rack-test"
  gem "factory_girl"
end

